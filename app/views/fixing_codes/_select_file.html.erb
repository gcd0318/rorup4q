<%= @root_path.split('/')[-1] + '/' + @parent_path %>
<br />-----------------------------------<br />
<% if @sub_folders %>
  <% @sub_folders.each do |sf| %>
    <% if sf=='..' %>
      <%= link_to '..',
        :action=>'get_subs', :bug_id=>@bug.id, :controller=>'fixing_codes', :filepath=>'..', :parent_path=>@parent_path
      %><br />
    <% else %>
      <%= link_to sf, :action=>'get_subs', :bug_id=>@bug.id, :controller=>'fixing_codes', :filepath=>sf, :parent_path=>@parent_path %><br />
    <% end %>
  <% end %>
<% end %>
<% if @sub_files %>
  <% @sub_files.each do |sf| %>
    <%= link_to sf,
    :action=>'select_a_file', :bug_id=>@bug.id, :controller=>'fixing_codes', :filepath=>sf %><br />
  <% end %>
<% end %>


