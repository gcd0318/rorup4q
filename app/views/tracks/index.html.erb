<h1>Listing tracks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Product</th>
    <th>Owner</th>
    <th></th>
  </tr>

<% @tracks.each do |track| %>
  <tr>
    <td><%= link_to track.name, track %></td>
    <td><%= track.product.name %></td>
    <td><%= track.owner.username %></td>
    <td><%= link_to 'Delete', track, :confirm => 'Are you sure? All related objects would be deleted.', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Track', new_track_path %>
