<h1>Listing features</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Component</th>
    <th>Owner</th>
    <th></th>
  </tr>

<% @features.each do |feature| %>
  <tr>
    <td><%= link_to feature.name, feature %></td>
    <td><%= link_to feature.component.name, feature.component %></td>
    <td><%= link_to feature.owner.username, feature.owner %></td>
    <td><%= link_to 'Delete', feature, :confirm => 'Are you sure? All related objects would be deleted.', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Feature', new_feature_path %>
