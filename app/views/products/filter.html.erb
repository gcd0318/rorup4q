<h1>Listing products</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Owner</th>
    <th>Desc</th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= link_to product.name, product %></td>
    <td><%= link_to product.owner.username, product.owner %></td>
    <td><%= product.desc %></td>
    <td><%= link_to 'Delete', product, :confirm => 'Are you sure? All related objects would be deleted.', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product', new_product_path %>
<%= link_to 'All Products', products_path %>
